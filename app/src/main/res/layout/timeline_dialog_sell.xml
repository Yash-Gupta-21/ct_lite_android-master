<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:paddingLeft="@dimen/_2sdp"
    android:paddingTop="@dimen/_2sdp"
    android:background="@drawable/large_edittext_background2"

    android:paddingRight="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cancelSellDialog"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:elevation="@dimen/_3sdp"
        app:srcCompat="@drawable/ic_cancel" />

    <LinearLayout
        android:paddingTop="@dimen/_10sdp"
        android:layout_below="@+id/cancel_germi_dialog"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_for_desc_and_act_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timelineSellHead"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_center_image"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="@string/sell_quantity_label"
                        android:textSize="@dimen/_11ssp"
                        tools:fontFamily="@font/roboto_thin" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".05"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_center_image"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text=":"
                        android:textSize="@dimen/_11ssp"
                        tools:fontFamily="@font/roboto_thin" />

                    <EditText
                        android:inputType="number"
                        android:hint="@string/kg_label"
                        android:id="@+id/timelineQtyTv"
                        android:layout_width="0dp"
                        android:layout_weight=".55"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_center_image"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/total_amount_label"
                        android:textSize="@dimen/_11ssp" />



                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".05"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_center_image"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text=":"
                        android:textSize="@dimen/_11ssp"
                        tools:fontFamily="@font/roboto_thin" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/timelineTotalAmmount"
                        android:layout_width="0dp"
                        android:layout_weight=".55"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_activity_type"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:hint="@string/hint_amount"
                        android:padding="@dimen/_3sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rateLabelTv"
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_activity_type"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:padding="@dimen/_3sdp"
                        android:text="Rate"
                        android:textSize="@dimen/_11ssp" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".05"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_center_image"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text=":"
                        android:textSize="@dimen/_11ssp"
                        tools:fontFamily="@font/roboto_thin" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/timelineRate"
                        android:layout_width="0dp"
                        android:layout_weight=".55"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_activity_type"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:padding="@dimen/_3sdp"
                        android:hint="@string/rate_label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_activity_type"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/sold_on_label"
                        android:textSize="@dimen/_11ssp" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".05"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_center_image"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text=":"
                        android:textSize="@dimen/_11ssp"
                        tools:fontFamily="@font/roboto_thin" />

                    <EditText
                        android:focusable="false"
                        android:id="@+id/timelineSoldOn"
                        android:layout_width="0dp"
                        android:layout_weight=".55"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/timeline_activity_type"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:padding="@dimen/_3sdp"
                        android:hint="@string/dd_mm_yyyy" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/addedByTv"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeline_activity_type"
            android:layout_marginRight="@dimen/_5sdp"
            android:ellipsize="end"
            android:padding="@dimen/_3sdp"
            android:text=""
            android:textSize="@dimen/_10ssp" />



        <Button
            android:id="@+id/updateTv"
            android:textColor="@color/white"
            android:layout_margin="@dimen/_3sdp"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="@string/profile_btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>