<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/whole_card_farmer_farm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="#F8F8FF"
        app:cardCornerRadius="@dimen/_1sdp">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--1nd linear layout-->
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp">

                    <TextView
                        android:layout_marginRight="@dimen/_5sdp"
                        android:id="@+id/farm_single_tv"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/rounded_lay_for_farmer_profile"
                        android:gravity="center"
                        android:text="M"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_35ssp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="7.8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_2sdp">
                            <TextView
                                android:id="@+id/farm_name_and_lot_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:id="@+id/tv_season_linear_lay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/season_lable"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_weight="0.3"
                                    android:baselineAligned="false"
                                    android:text="@string/season_label"
                                    android:textSize="@dimen/_11ssp"  />

                                <TextView
                                    android:id="@+id/season_tv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textSize="@dimen/_11ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:id="@+id/tv_addres_linear_lay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/e6"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_weight="0.3"
                                    android:baselineAligned="false"
                                    android:text="@string/address_label"
                                    android:textSize="@dimen/_11ssp"  />

                                <TextView
                                    android:id="@+id/farm_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textSize="@dimen/_11ssp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!--1nd linear layout end-->
            <View
                android:layout_width="@dimen/_270sdp"
                android:layout_height="1px"
                android:background="@color/darkgrey"
                android:layout_gravity="center"
                >

            </View>
            <!--2nd linear layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/farm_harvest_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/_12ssp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="@string/harvest_date_exp_label_act"
                        android:textSize="@dimen/_8ssp" />



                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/darkgrey"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/farm_harvest_date_exp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/_12ssp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="@string/harvest_date_exp_label_exp"
                        android:textSize="@dimen/_8ssp" />



                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/darkgrey"
                    android:layout_gravity="center">


                </View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/area_in_acer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/darkgreen"
                        android:textSize="@dimen/_12ssp" />
                    <TextView
                        android:id="@+id/farm_area_label"
                        android:paddingBottom="@dimen/_2sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="@string/farm_area_label"
                        android:textSize="@dimen/_8ssp" />
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/darkgrey"
                    android:layout_gravity="center"/>


            </LinearLayout>
        </LinearLayout>
        <!--2nd linear layout end-->
    </androidx.cardview.widget.CardView>

</LinearLayout>