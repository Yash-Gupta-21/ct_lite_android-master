<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_add_visit_full_lay_timeline"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SubmitVisitForm.TimelineAddVisitActivity2">

    <include
        android:id="@+id/toolbar_actionbar_timeline_visit"
        layout="@layout/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_actionbar_timeline_visit">

        <LinearLayout
            android:layout_below="@+id/toolbar_actionbar_timeline_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:id="@+id/reasonSpinner"
                android:layout_below="@id/ti_farmarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/spinner_background2"
                android:gravity="center_horizontal"
                android:outlineProvider="background"
                app:RevealEmptyText="@string/select_reason"
                app:ShowBorders="true"
                />

            <EditText
                android:id="@+id/commentEt"
                android:padding="@dimen/_3sdp"
                android:gravity="start"
                android:hint="@string/comment_label"
                android:minLines="7"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:background="@drawable/large_edittext_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/images_to_upload_lieanr_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/farm_image1_timeline_visit"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/photo_big" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/farm_image1_timeline_visit"
                                android:layout_centerHorizontal="true"
                                android:padding="@dimen/_5sdp"
                                android:text="Farm Image1"
                                android:textColor="@color/yel_gre_mix_dark"
                                android:textSize="@dimen/_13ssp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/farm_image2_timeline_visit"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/photo_big" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/farm_image2_timeline_visit"
                                android:layout_centerHorizontal="true"
                                android:padding="@dimen/_5sdp"
                                android:text="Farm Image2"
                                android:textColor="@color/yel_gre_mix_dark"
                                android:textSize="@dimen/_13ssp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/farm_image3_timeline_visit"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/photo_big" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/farm_image3_timeline_visit"
                                android:layout_centerHorizontal="true"
                                android:padding="@dimen/_5sdp"
                                android:text="Farm And Farmer"
                                android:textColor="@color/yel_gre_mix_dark"
                                android:textSize="@dimen/_13ssp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/farm_image4_timeline_visit"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/photo_big" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/farm_image4_timeline_visit"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="Selfie with farm and farmer"
                                android:textColor="@color/yel_gre_mix_dark"
                                android:textSize="@dimen/_13ssp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/extra_img_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/farm_image5_timeline_visit"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/photo_big" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/farm_image6_timeline_visit"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:paddingBottom="@dimen/_7sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/photo_big" />


                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/add_more_img_butt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/ic_add_circle_outline_dark_grey_black_24dp"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/hidden_linear_extra_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/farm_image5"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/photo_big" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/farm_image5"
                                android:layout_centerHorizontal="true"
                                android:padding="@dimen/_5sdp"
                                android:text="Extra Farm Image1"
                                android:textColor="@color/yel_gre_mix_dark"
                                android:textSize="@dimen/_13ssp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/farm_image6"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/photo_big" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/farm_image6"
                                android:layout_centerHorizontal="true"
                                android:padding="@dimen/_5sdp"
                                android:text="Extra Farm Image2"
                                android:textColor="@color/yel_gre_mix_dark"
                                android:textSize="@dimen/_13ssp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cpcCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:elevation="@dimen/_1sdp"
                app:cardCornerRadius="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>





    <View
        android:visibility="gone"
        android:id="@+id/connectivityLine"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
<LinearLayout
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/act_pres_submit_timeline_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/button_background_color"
        android:gravity="center"
        android:padding="@dimen/_7sdp"
        android:text="@string/submit"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/_15ssp" />
    <include

        android:layout_alignParentBottom="true"
        android:id="@+id/adLayout"
        layout="@layout/ad_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
</RelativeLayout>