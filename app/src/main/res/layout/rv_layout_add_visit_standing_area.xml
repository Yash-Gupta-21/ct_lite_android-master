<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/removeItemImg"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_17sdp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_cross_delete_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/standingAreaCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:elevation="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="5"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="start|center_vertical"
                    android:text="@string/last_standing_area"
                    android:textColor="#696969"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/lastStandingAreaTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:inputType="numberDecimal"
                    android:textColor="#696969"
                    android:textSize="@dimen/_12ssp" />
                <!--android:hint="@string/in_acres_hint"-->

                <TextView
                    android:id="@+id/areaUnitLabelTv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="2"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="start|center_vertical"
                    android:text="@string/acres_msg_brkt"
                    android:textColor="#696969"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/ic_date_range_grey_24dp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="start|center_vertical"
                    android:text="@string/standing_crop_area_label"
                    android:textColor="#696969"
                    android:textSize="@dimen/_12ssp" />

                <EditText
                    android:id="@+id/currentStandingAreaEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="3"
                    android:gravity="start"
                    android:hint="@string/area"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/areaUnitLabelTv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="2"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="start|center_vertical"
                    android:text="@string/acres_msg_brkt"
                    android:textColor="#696969"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>