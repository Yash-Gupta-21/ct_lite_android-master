<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/update_acres_dialog_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_80sdp"
    android:layout_marginBottom="@dimen/_80sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:background="@drawable/large_edittext_background2"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">


   <!-- <ProgressBar
        android:id="@+id/update_standing_progress"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/update_standing_progress"
        android:elevation="@dimen/_30sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/croptrails_loader2"
        android:visibility="invisible" />

    <ImageView
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/update_acres_cancel_image"
        app:srcCompat="@drawable/ic_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="@dimen/_10sdp"
        android:id="@+id/update_acres_dialog_title"
        android:textColor="@color/black"
        android:text="Update Actual Area"
        android:gravity="center"
        android:textSize="@dimen/_15ssp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@+id/update_acres_dialog_title"
        android:id="@+id/update_acres_dialog_il"
        android:textColorHint="@color/grey"
        android:layout_width="match_parent"
        android:theme="@style/Theme.AppCompat"
        android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/update_acres_dialog_et"
        android:hint="@string/enter_area_hint"
        android:gravity="start"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="numberDecimal"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:textSize="@dimen/_13ssp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_below="@+id/update_acres_dialog_il"
        android:paddingRight="@dimen/_8sdp"
        android:id="@+id/update_standing_acres_btn"
        android:paddingLeft="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text="Update"
        android:background="@drawable/gradient_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_9ssp"
        android:layout_below="@id/update_standing_acres_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Disclaimer : Updating actual area will update the standing area however you can still mark farm area by moving around farm"/>
</RelativeLayout>