<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/whole_cv_farm_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardBackgroundColor="#F8F8FF"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:elevation="@dimen/_10sdp"
                android:id="@+id/moreOptionImage"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:visibility="gone"
                android:elevation="@dimen/_10sdp"
                android:id="@+id/selectCheckbox"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/contentLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <!--1nd linear layout-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:id="@+id/farmerImage"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:gravity="center"
                            />
                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:id="@+id/farmer_single_tv"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/rounded_lay_for_farmer_profile"
                            android:gravity="center"
                            android:text="M"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_35ssp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="7.8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_2sdp">

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/farmer_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".4"
                                    android:text="Farmer Name"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/farm_lot_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/_12ssp"
                                    />



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/spouseLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/fatherSpouseLableTv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_weight="0.3"
                                    android:baselineAligned="false"
                                    android:text="@string/fathers_name"
                                    android:textSize="@dimen/_11ssp"  />

                                <TextView
                                    android:id="@+id/farm_farmer_fathers_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAlignment="textStart"
                                    android:textSize="@dimen/_11ssp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <LinearLayout
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:weightSum="1"
                                    android:orientation="horizontal"
                                    android:id="@+id/tv_addres_linear_lay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/e6"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_weight="0.3"
                                        android:baselineAligned="false"
                                        android:text="@string/address_label"
                                        android:textSize="@dimen/_11ssp"  />

                                    <TextView
                                        android:id="@+id/farm_address"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.7"
                                        android:gravity="start"
                                        android:text=""
                                        android:textAlignment="textStart"
                                        android:textSize="@dimen/_11ssp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <!--1nd linear layout end-->
                <View
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="1px"
                    android:background="@color/darkgrey"
                    android:layout_gravity="center"
                    >

                </View>
                <!--2nd linear layout-->
                <LinearLayout
                    android:id="@+id/bottomBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/sowingDateLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/farm_harvest_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="0.5"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/darkgreen"
                            android:textSize="@dimen/_12ssp" />
                        <TextView
                            android:id="@+id/dateLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="@string/harvest_date"
                            android:textSize="@dimen/_8ssp" />



                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/darkgrey"
                        android:layout_gravity="center"
                        >

                    </View>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/exp_area_in_acer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="@color/darkgreen"
                            android:textSize="@dimen/_12ssp" />
                        <TextView
                            android:id="@+id/farm_area_label"
                            android:paddingBottom="@dimen/_2sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="@string/farm_area_label"
                            android:textSize="@dimen/_8ssp" />
                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/darkgrey"
                        android:layout_gravity="center">

                    </View>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView

                            android:id="@+id/call_farmer_butt"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_weight=".2"
                            android:padding="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_call_green_24dp" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--2nd linear layout end-->
    </androidx.cardview.widget.CardView>

</LinearLayout>