<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardElevation="@dimen/_3sdp"
    android:orientation="vertical">


    <LinearLayout
        android:padding="@dimen/_3sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp"
        android:weightSum="1">

        <TextView

            android:gravity="center_vertical"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_issue_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:text="Subject"></TextView>
        <TextView
            android:text="  :  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/subjectTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:text=""></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_3sdp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp"
        android:weightSum="1">

        <TextView
            android:gravity="center_vertical"
            android:drawableTint="@color/colorPrimaryDark"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableLeft="@drawable/ic_id_star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:text="Case ID"></TextView>
        <TextView
            android:text="  :  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/new_color"
            android:textStyle="bold"
            android:id="@+id/caseIdTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:text=""></TextView>


    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/_3sdp"
        android:alpha=".7"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_8ssp"
        android:id="@+id/timeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>