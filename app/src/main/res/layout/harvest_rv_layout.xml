<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full_rel_lay_harvest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_rel_harvest_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/rel_harvest_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <com.i9930.croptrails.CustomTextview.CustomTextView
                android:id="@+id/harvest_details_custom_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:singleLine="true"
                android:text="@string/harvest_details_label"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:edittextfont="ROBOTO-REGULAR.TTF" />

            <ImageView
                android:id="@+id/down_arrow_img_harvest_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_17sdp"
                android:background="@drawable/ic_keyboard_arrow_down_grey_24dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>