<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"

    app:cardCornerRadius="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/_2sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/fingerprintHeadTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/fingerprint_iv"
        android:layout_marginEnd="8dp"
        android:text="@string/fingerprint_login_to"
        android:textSize="@dimen/_14ssp"/>

    <ImageView

        android:layout_gravity="center"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_fingerprint"
        android:layout_marginEnd="8dp"
        android:id="@+id/fingerprint_iv"
        app:tint="@color/colorPrimary" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:id="@+id/fingerprint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/fingerprint_iv"
        android:layout_marginEnd="8dp"
        android:text="Touch the Fingerprint Sensor"
        android:textSize="@dimen/_10ssp"/>

    <TextView
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:id="@+id/cancelTv"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:textSize="@dimen/_14ssp"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>