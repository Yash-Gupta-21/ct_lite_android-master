<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/harvestDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cv_rel_harvest_details"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/large_edittext_background2"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_2sdp"
    android:paddingTop="@dimen/_2sdp"
    android:paddingRight="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp">
    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/cancel_harvest_dialog"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_alignParentRight="true"
                android:elevation="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_cancel" />

            <LinearLayout
                android:id="@+id/show_farm_details_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--card0-->
                <!--
                -->

                <androidx.cardview.widget.CardView
                    android:id="@+id/qrCard"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/top_edge_rounded_bg"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/healRel"
                        android:background="#cccccc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/qrLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:padding="@dimen/_6sdp"
                        android:text="@string/qr_code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18ssp" />
                        <ImageView
                            android:id="@+id/shareImage"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_3sdp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_share_white_24px"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"/>

                    </RelativeLayout>

                        <ImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/qrImageView"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:layout_below="@+id/healRel"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_share_white_24px"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"/>


                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/card0_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/top_edge_rounded_bg"
                    app:cardBackgroundColor="#cccccc">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:padding="@dimen/_6sdp"
                        android:text="@string/farm_detail_label"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18ssp" />


                </androidx.cardview.widget.CardView>


                <!--end of card0-->

                <!--card 1-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_weight="6"
                            android:drawableLeft="@drawable/ic_date_range_grey_24dp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="start|center_vertical"
                            android:text="@string/harvest_done_date"

                            android:textColor="#696969"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_harvest_done_date_dialog"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="4"
                            android:gravity="start"
                            android:text="YYYY-MM-DD"
                            android:textColor="#000"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--end of card1-->

                <!--card2-->


                <androidx.cardview.widget.CardView
                    android:id="@+id/card2_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_weight="6"
                            android:drawableLeft="@drawable/ic_date_range_grey_24dp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="start|center_vertical"
                            android:text="@string/weighment_date_label"
                            android:textColor="#696969"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_weightment_date_dialog"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="4"
                            android:gravity="start"
                            android:text="YYYY-MM-DD"
                            android:textColor="#000"

                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--end of card2-->
                <!--card 3-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_weight="6"
                            android:drawableLeft="@drawable/ic_waves_grey_24dp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="start|center_vertical"
                            android:text="@string/harvested_area_label"
                            android:textColor="#696969"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_harvested_area_dialog"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="4"
                            android:gravity="start"
                            android:text="8"
                            android:textColor="#000"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--end of card3-->

                <!--card 4-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card3"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_weight="6"
                            android:drawableLeft="@drawable/ic_landscape_grey_24dp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="start|center_vertical"
                            android:text="@string/standing_area_label"
                            android:textColor="#696969"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_standing_areaa_dialog"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="4"
                            android:gravity="start"
                            android:text="2"
                            android:textColor="#000"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--end of card 4-->


                <LinearLayout
                    android:id="@+id/bag_heading_layout_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card05_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/top_edge_rounded_bg"
                        app:cardBackgroundColor="#cccccc">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:padding="@dimen/_6sdp"

                            android:text="@string/bag_details"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18ssp" />


                    </androidx.cardview.widget.CardView>

                    <!--<androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:weightSum="10">
                            <!--<View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#000000"
                                android:layout_weight="0.04"/>-->
                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_weight="3.95"
                                android:gravity="center"
                                android:text="@string/bags_no"
                                android:textColor="#000000" />
                            <!--<View
                                android:layout_weight="0.04"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#000000"/>-->

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_weight="5.93"
                                android:gravity="center"
                                android:text="@string/weight_in_kgs_label"
                                android:textColor="#000000" />
                            <!-- <View
                                 android:layout_width="0dp"
                                 android:layout_height="match_parent"
                                 android:background="#000000"
                                 android:layout_weight="0.04"/>-->


                        </LinearLayout>

                    <!--</androidx.cardview.widget.CardView>-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dynamic_harvest_bag_layout_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/harvestBagRecycler_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:nestedScrollingEnabled="false"></androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>
